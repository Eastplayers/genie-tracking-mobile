{
  "name": "@mobiletracker/react-native",
  "version": "0.1.0",
  "description": "React Native bridge for Mobile Tracking SDK",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --run",
    "test:watch": "jest --watch",
    "test:property": "jest --testPathPattern=properties --run",
    "build": "tsc",
    "prepare": "npm run build"
  },
  "keywords": [
    "react-native",
    "analytics",
    "tracking",
    "mobile"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.70.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.25",
    "@types/react-native": "^0.72.3",
    "fast-check": "^3.13.2",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-native": "^0.72.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.test.(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ]
  },
  "react-native": {
    "ios": "./ios",
    "android": "./android"
  }
}
